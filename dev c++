#include <math.h>
#include <iostream>

using namespace std;


int main()
{
	float mat[50][50], b[50], x[50], p1, p;
	int n, k, j, i;
	
		cout << "Este programa resuelve Sistemas de Ecuaciones por medio del metodo Gauss-Jordan" << endl;
	cout << "Ingresa el numero de filas de la matriz o bien el nÃºmero de ecuaciones:"<<endl;
	cin >> n;
	cout << "Ingrese los coeficientes de las variables:"<<endl;
	for(i=0; i<n; i++)
	{
	for(j=1;j<=n;j++)
	{
		cin >> mat[i][j];
	}	
	}
	cout << "Agrega los terminos independientes:" << endl;
	for(i=0; i<n; i++)
	{
		cin>>b[i];
	}
	
	for(k=1;k<n-1;k++)
	{
		for(i=k+1;i<n;i++)
	{
		p=mat[i][k]/mat[k][k];
		for(j=k;j<n;j++)
	{
		mat[i][j]=mat[i][j]-p*mat[k][j];
	}
	b[i]=b[i]-p*b[k];
	}
	}
	x[n-1]=b[n-1]/mat[n-1][n-1];
	for(i=n-2;i>=0;i--)
	{
		p1=b[i];
		for(j=i+1;j<n;j++)
		{
			p1=p1-mat[i][j]*x[j];
		}
		x[i]=p1/mat[i][i];
	}
	cout<<"La matriz es:"
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
	{
		cout<<mat[i][j];
	}
	cout<<b[i]<<endl;
	}

	cout << "La solucion es:" << endl;
	for(i=0;i<n;i++)
	{
		cout<<x[i]<<endl;
	}
	
	return 0;
}